#include <iostream>
#include <vector>
#include <algorithm>  
using namespace std;
int main() 
{
    setlocale(LC_ALL, "Ukrainian");
    int rows = 3;
    int cols = 4;

    vector<vector<int>> matrix = 
    {
        {0, 1, 2, 0},
        {3, 0, 4, 5},
        {6, 7, 8, 0}
    };

    int zeroCount = 0; 
    for (const auto& row : matrix) 
    {
        zeroCount += count(row.begin(), row.end(), 0);
    }

    cout << "Кiлькiсть нулів в матриці: " << zeroCount << endl;

    return 0;
}
